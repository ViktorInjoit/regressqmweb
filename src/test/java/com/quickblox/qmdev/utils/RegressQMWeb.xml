<?xml version="1.0" encoding="UTF-8"?>
<suite name="RegressQMWeb" parallel="com.quickblox.qmdev" thread-count="2">
    <test name="ChromeTest">
        <parameter name="browser" value="Chrome"/>
        <parameter name="domain" value="https://qmdev.quickblox.com/"/>
        <classes>
            <class name="com.quickblox.qmdev.tests.LinksCheckingsOnWelcomeTest">
                <parameter name="appname" value="checklinks"/>
                <methods>
                    <method name="verifyingPhoneNumberForm"/>
                    <method name="checkingFooterLinks"/>
                </methods>
            </class>
            <class name="com.quickblox.qmdev.tests.LogInsTest">
                <parameter name="appname" value="login"/>
                <methods>
                    <method name="logInByEmail"/>
                    <method name="logInByFacebook"/>
                    <method name="logInByEmailNegative"/>
                </methods>
            </class>
            <class name="com.quickblox.qmdev.tests.UserOptionsTest">
                <parameter name="appname" value="useroptions"/>
                <methods>
                    <method name="checkProfile"/>
                    <method name="checkName"/>
                    <method name="checkStatus"/>
                    <method name="checkPhoneNumber"/>
                    <method name="checkSettings"/>
                    <method name="checkingFooterButtons"/>
                    <method name="editPassword"/>
                    <method name="editPasswordNegative"/>
                </methods>
            </class>
            <class name="com.quickblox.qmdev.tests.SearchTest">
                <parameter name="appname" value="searches"/>
                <methods>
                    <method name="searchTopLeftField"/>
                    <method name="searchForFriendsRedButtonClick"/>
                    <method name="checkContactsButton"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>
